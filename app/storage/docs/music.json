{
    "basePath": "http://video-lyrics.herokuapp.com/1.0",
    "swaggerVersion": "1.2",
    "apiVersion": "1.0",
    "resourcePath": "music",
    "apis": [
        {
            "path": "/music",
            "description": "Music information.",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Retrieve information about music.",
                    "nickname": "musicInfo",
                    "parameters": [
                        {
                            "name": "songID",
                            "type": "string",
                            "required": true,
                            "allowMultiple": false,
                            "description": "The ID of a song to retrieve information from."
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "A response containing an object with fields musicID (the ID of the music), lyricsID (the ID of the lyrics), videoID (the ID of the video), title (the title of the music), image (the image for the music), image-thumbnail (a thumbnail of the image). If nothing was found, then false will be returned."
                        },
                        {
                            "code": 500,
                            "message": "The query could not be executed."
                        }
                    ]
                }
            ]
        },
        {
            "path": "/music/list",
            "description": "Music look-up engine.",
            "operations": [
                {
                    "method": "GET",
                    "summary": "List music.",
                    "nickname": "musicList",
                    "parameters": [
                        {
                            "name": "query",
                            "type": "string",
                            "required": false,
                            "allowMultiple": false,
                            "description": "The query used to search for music. If no query was used, then it will list everything."
                        },
                        {
                            "name": "offset",
                            "type": "string",
                            "required": false,
                            "allowMultiple": false,
                            "description": "The first few items (specified by the offset parameter) will not be included in the results (no offset as default)."
                        },
                        {
                            "name": "items",
                            "type": "string",
                            "required": false,
                            "allowMultiple": false,
                            "description": "The maximal number of items that will be returned (0 means no limit)."
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "A response containing a list of objects with field musicID (the ID of the music)."
                        },
                        {
                            "code": 500,
                            "message": "The query could not be executed."
                        }
                    ]
                }
            ]
        }
    ]
}