{
    "basePath": "http://vls.app/1.0/",
    "swaggerVersion": "1.2",
    "apiVersion": "1.0",
    "resourcePath": "/music",
    "apis": [
        {
            "path": "music/info",
            "description": "Track information.",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Retrieve information about a song.",
                    "nickname": "musicInfo",
                    "parameters": [
                        {
                            "name": "songID",
                            "type": "string",
                            "required": true,
                            "allowMultiple": false,
                            "description": "The ID of a song to retrieve information from."
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "A response containing corresponding information about the song."
                        },
                        {
                            "code": 500,
                            "message": "The query could not be executed."
                        }
                    ]
                }
            ]
        },
        {
            "path": "music/search",
            "description": "Music search engine.",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Search for a song.",
                    "nickname": "musicSearch",
                    "parameters": [
                        {
                            "name": "query",
                            "type": "string",
                            "required": true,
                            "allowMultiple": false,
                            "description": "The query used to search for songs."
                        },
                        {
                            "name": "offset",
                            "type": "string",
                            "required": false,
                            "allowMultiple": false,
                            "description": "The first few items (specified by the offset parameter) will not be included in the results (no offset as default)."
                        },
                        {
                            "name": "items",
                            "type": "string",
                            "required": false,
                            "allowMultiple": false,
                            "description": "The maximal number of items that will be returned (0 means no limit)."
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "A response containing a list of relevant songs and their corresponding information."
                        },
                        {
                            "code": 500,
                            "message": "The query could not be executed."
                        }
                    ]
                }
            ]
        }
    ]
}